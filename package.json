    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-love": "^140.0.0",
    "eslint-plugin-oxlint": "^1.35.0",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16",
    "wxt": "^0.20.13"
  },
  "packageManager": "pnpm@10.15.0"
}
