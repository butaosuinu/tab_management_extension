{
  "name": "tab-management-extension",
  "version": "1.0.0",
  "description": "Chrome extension for managing browser tabs",
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "tab-management"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "zip": "wxt zip",
